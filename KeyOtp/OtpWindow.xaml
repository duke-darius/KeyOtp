            <Button x:Name="SettingsButton" Click="SettingsButton_Click">
                <iconPacks:PackIconFontAwesome Kind="CogSolid"></iconPacks:PackIconFontAwesome>

            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>
